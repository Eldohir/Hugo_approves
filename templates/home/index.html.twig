{% extends 'base.html.twig' %}

{% block title %}Hugo approves
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-center mt-3">
		<h1>Tous les tops de mon super site</h1>
	</div>
	<div class="container">
		<div class="row justify-content-around">

			{% for article in articles %}
				<div class="card col-4 shadow-lg m-2" style="width: 18rem;">
					<img class="img card-img-top img-center" src="{{article.image}}" alt="Card image cap">
					<div class="card-body align-text-center">
						<h5 class="card-title">{{ article.name }}</h5>
						<p>{{ article.date }}</p>
					</div>
				</div>
			{% else %}
				Aucune catégorie trouvée.
			{% endfor %}
		</div>
	</div>
</div>{% endblock %}
