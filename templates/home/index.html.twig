{% extends 'base.html.twig' %}

{% block title %}Hugo approves
{% endblock %}

{% block body %}
	<h1>Toutes les tops de mon super site :
	</h1>
	<div class="container">
		<div class="media d-flex flex-wrap">
			{% for article in articles %}
				<div class="media d-flex flex-wrap m-2 mx-auto">
					<div class="card shadow-lg" style="width: 18rem;">
						<img src="{{article.image}}" class="img-fluid" alt="{{ article.name }}">
						<div class="card-body">
							<h5 class="card-title">{{ article.name }}</h5>
							<p class="card-text">{{ article.category.name }}</p>
							<p class="card-text">{{ article.summary }}</p>
							<a href="{{ path("article_show", { id: article.id }) }}" class="btn btn-primary">DÃ©couvrir</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	{% endblock %}
